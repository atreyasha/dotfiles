# set terminfo if this is missing
if [[ "$TERM" == "xterm-termite" ]]; then
  if ! infocmp xterm-termite &>/dev/null; then
    tic -x "$HOME/.config/termite/termite.terminfo"
  fi
fi

# configure dircolors
if [ ! -f "$HOME/.dircolors" ]; then
  eval "$(dircolors -b)"
else
  eval "$(dircolors -b "$HOME/.dircolors")"
fi
