set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Pulse Audio controls
# unmute and increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id \
  "amixer -q sset Master unmute && amixer -q sset Master 5%+"

# unmute and decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id \
  "amixer -q sset Master unmute && amixer -q sset Master 5%-"

# toggle audio mute
bindsym XF86AudioMute exec --no-startup-id \
  "amixer -q sset Master toggle"

# screen brightness controls
# increase screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id "brightnessctl set +10%"
# decrease screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id \
  "[ $(brightnessctl -m | cut -d , -f 4 | sed 's/%//') -gt 10 ] && \
  brightnessctl set 10%-"

# toggle on wifi signal
bindsym $mod+Shift+w exec --no-startup-id \
  "wifi toggle && \
  pkill -SIGRTMIN+8 -x i3status-rs"

# toggle keyboard layout
bindsym $mod+Shift+k exec --no-startup-id \
  "xkb-switch -n && \
  pkill -SIGRTMIN+9 -x i3status-rs"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# mode for system operations
bindsym $mod+Shift+e mode "exit: [s]uspend, ab[o]rt-X, [l]ock, [r]eboot, [p]oweroff"
mode "exit: [s]uspend, ab[o]rt-X, [l]ock, [r]eboot, [p]oweroff" {
  # commands inside mode
  bindsym s mode "default"; exec --no-startup-id systemctl suspend
  bindsym o exec --no-startup-id i3-msg exit
  bindsym l mode "default"; exec --no-startup-id loginctl lock-session
  bindsym r exec --no-startup-id systemctl reboot
  bindsym p exec --no-startup-id systemctl poweroff
  # exit mode
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+Shift+e mode "default"
}

# mode for adjusting sizes/gaps
bindsym $mod+r mode "adjust size/gaps: j,k,l,h [size] | J,K,L,H [gaps]"
mode "adjust size/gaps: j,k,l,h [size] | J,K,L,H [gaps]" {
  # adjust window sizes
  bindsym h resize shrink width 10 px or 1 ppt
  bindsym j resize grow height 10 px or 1 ppt
  bindsym k resize shrink height 10 px or 1 ppt
  bindsym l resize grow width 10 px or 1 ppt
  # adjust window gaps
  bindsym Shift+j gaps inner all plus 2
  bindsym Shift+k gaps inner all minus 2
  bindsym Shift+l gaps outer all plus 2
  bindsym Shift+h gaps outer all minus 2
  # exit mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

# mode for taking screenshots
bindsym $mod+Shift+s mode "screen-capture: s[e]lection, foc[u]sed, [a]ll"
mode "screen-capture: s[e]lection, foc[u]sed, [a]ll" {
  # commands inside mode
  bindsym --release e exec --no-startup-id scrot --line style=dash --select; mode "default"
  bindsym u exec --no-startup-id scrot -u -b; mode "default"
  bindsym a mode "default"; exec --no-startup-id "sleep 0.5 && scrot"
  # exit mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+Shift+s mode "default"
}

# keybinding for qutebrowser
bindsym $mod+q exec --no-startup-id qutebrowser

# change monitors based on new connection
bindsym $mod+Shift+m exec --no-startup-id "autorandr --change && feh-wrapper"

# balance workspace
bindsym $mod+Shift+b exec --no-startup-id "i3_balance_workspace"
bindsym $mod+b exec --no-startup-id "i3_balance_workspace --scope focus"

# start terminal with different names for them to be swallowed
exec --no-startup-id i3-msg workspace $ws1; { i3-sensible-terminal --working-directory ~ & }; { i3-sensible-terminal --working-directory ~ & }

# mute sound at i3 startup
exec --no-startup-id "amixer -q sset Master 50% && amixer -q sset Master mute"

# check monitors and reset wallpaper at startup
exec --no-startup-id "autorandr --change && feh-wrapper"

# startup picom for better graphics and stop flickering
exec_always --no-startup-id "picom-wrapper"

# start i3bar to display a workspace bar
bar {
  # output primary
  status_command i3status-rs ~/.config/i3/config.toml
  # specify bar position
  position top
}

